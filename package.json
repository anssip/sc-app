{
  "name": "spot-canvas-app",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production remix vite:build",
    "predev": "bun run build",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "test:firestore": "bun run scripts/test-firestore-simple.ts",
    "test:firestore:full": "bun run scripts/test-firestore.ts",
    "test:firestore:noauth": "bun run scripts/test-firestore-noauth.ts",
    "deploy": "NODE_ENV=production bash scripts/prepare-functions.sh && NODE_ENV=production firebase deploy",
    "deploy:hosting": "NODE_ENV=production bun run build && NODE_ENV=production firebase deploy --only hosting",
    "deploy:functions": "NODE_ENV=production bash scripts/prepare-functions.sh && NODE_ENV=production firebase deploy --only functions",
    "firebase:emulators": "firebase emulators:start --only functions,firestore",
    "firebase:emulators:all": "firebase emulators:start",
    "firebase:login": "firebase login",
    "emulators:dev": "FIRESTORE_EMULATOR_HOST=localhost:8090 FUNCTIONS_EMULATOR_HOST=localhost:5001 firebase emulators:start --only functions,firestore",
    "emulators:mcp": "cd functions && bun run build && cd .. && firebase emulators:start --only functions:mcpServer,firestore,auth --project spotcanvas-prod",
    "add-emu-user": "node scripts/add-emulator-user.mjs"
  },
  "dependencies": {
    "@anssip/rs-charts": "1.2.8",
    "@headlessui/react": "^2.2.4",
    "@remix-run/node": "^2.16.8",
    "@remix-run/react": "^2.16.8",
    "@remix-run/serve": "^2.16.8",
    "@stripe/react-stripe-js": "^3.8.1",
    "@stripe/stripe-js": "^7.7.0",
    "@use-gesture/vanilla": "^10.3.1",
    "dotenv": "^17.2.2",
    "firebase": "^11.8.1",
    "gray-matter": "^4.0.3",
    "isbot": "^4.1.0",
    "lucide-react": "^0.526.0",
    "marked": "^16.1.2",
    "node-fetch": "^2.7.0",
    "openai": "^5.19.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-ga4": "^2.1.0",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^3.0.2",
    "remark-gfm": "^4.0.1",
    "xinjs": "^0.7.3"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.16.8",
    "@types/marked": "^6.0.0",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.38.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "firebase-admin": "^13.5.0",
    "postcss": "^8.4.38",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.1.6",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^4.2.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
