{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "type": "module",
  "scripts": {
    "prebuild": "cp -r ../build ./",
    "build:remix": "echo 'Build files copied'",
    "clean": "rm -rf dist",
    "build": "bun run clean && bun run tsc",
    "build:ts": "rm -rf dist && bun run tsc",
    "watch": "bun run tsc --watch",
    "serve": "bun run build && firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "bun run build && firebase deploy --only functions",
    "deploy:customerio": "bun run build:ts && firebase deploy --only functions:syncUserToCustomerIO,functions:syncSubscriptionToCustomerIO",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "index.js",
  "dependencies": {
    "@anssip/rs-charts": "file:./rs-charts",
    "@customerio/cdp-analytics-node": "^0.3.5",
    "@headlessui/react": "^2.2.4",
    "@remix-run/express": "^2.16.8",
    "@remix-run/node": "^2.16.8",
    "@remix-run/react": "^2.16.8",
    "@stripe/react-stripe-js": "^3.8.1",
    "@stripe/stripe-js": "^7.7.0",
    "@use-gesture/vanilla": "^10.3.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "firebase": "^11.8.1",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^6.2.0",
    "gray-matter": "^4.0.3",
    "isbot": "^4.1.0",
    "lucide-react": "^0.526.0",
    "marked": "^16.1.2",
    "openai": "^5.19.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-ga4": "^2.1.0",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^3.0.2",
    "remark-gfm": "^4.0.1",
    "twitter-api-v2": "^1.27.0",
    "xinjs": "^0.7.3"
  },
  "private": true,
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "typescript": "^5.9.2"
  }
}
