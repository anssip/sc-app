rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow reading and subscribing to the trading_pairs collection and all nested paths
    match /trading_pairs/{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // Allow reading and listing the exchanges collection
    match /exchanges/{exchange} {
      allow read, list: if true;

      // Allow reading and listing all nested products
      match /products/{productId=**} {
        allow read, list: if true;
      }

      // Allow read access to exchange data with intervals (public data)
      match /products/{product}/intervals/{interval} {
        allow read: if true;  // Public read access for live candles
        allow write: if false; // Only backend can write
      }
    }

    // Allow reading live candles
    match /live_candles/{candleId} {
      allow read: if true;
      allow write: if false;
    }

    // Allow reading historical candles
    match /historical_candles/{candleId} {
      allow read: if true;
      allow write: if false;
    }

    // Collection group rules for better querying
    match /{path=**}/products/{productId} {
      allow read: if true;
    }

    match /{path=**}/intervals/{interval} {
      allow read: if true;
    }

    // User settings - allow authenticated users to manage their own settings
    match /settings/{userId} {
      // Allow access if userId matches either UID or email (for backward compatibility)
      allow read, write: if request.auth != null &&
        (request.auth.uid == userId || request.auth.token.email == userId);

      // Allow users to manage their own layouts
      match /layouts/{layoutId} {
        allow read, write: if request.auth != null &&
          (request.auth.uid == userId || request.auth.token.email == userId);

        // Allow users to manage charts within their layouts
        match /charts/{chartId} {
          allow read, write: if request.auth != null &&
            (request.auth.uid == userId || request.auth.token.email == userId);

          // Allow users to manage trend lines within their charts
          match /trendLines/{trendLineId} {
            allow read, write: if request.auth != null &&
              (request.auth.uid == userId || request.auth.token.email == userId);
          }
        }
      }
    }

    // Allow reading indicators from Firestore
    match /indicators/{indicatorId} {
      allow read: if true;
      allow list: if true;
      allow write: if false;
    }

    // User profiles and preferences - allow authenticated users to manage their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // AI Chat commands - allow users to manage their own commands
      match /chart_commands/{commandId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // AI Chat history - allow users to manage their own chat history
      match /chat_history/{messageId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Subscriptions - allow querying by firebase_uid field
    match /subscriptions/{document} {
      // Allow read if authenticated and the document belongs to the user
      allow read: if request.auth != null &&
        (request.auth.uid == resource.data.firebase_uid ||
         request.auth.uid == resource.data.user_id);
      // Allow listing/querying for authenticated users (needed for queries with where clause)
      allow list: if request.auth != null;
      // Only backend should write subscription data
      allow write: if false;
    }

    // Default deny for everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
